<div class="card">
    <h3 class="card-header">Create New Post</h3>
    <form class="card-body new-post-form" id="new-post-form" action="/api/posts" method="POST">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="post-title" name="title" class="form-input" />

        <label class="form-label" for="post-body">Body</label>
        <textarea id="post-body" name="body" class="form-input"></textarea>

        <button type="submit" class="btn">Create</button>
    </form>
</div>

  <script src="/js/add-post.js"></script> 